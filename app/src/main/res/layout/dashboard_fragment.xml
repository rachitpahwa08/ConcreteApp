<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/b2"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_marginTop="42dp">

        <Button
            android:id="@+id/about_concrete"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:onClick="aboutConcrete"
            android:text="About Concrete"
            android:textColor="#fff"/>


    </GridLayout>

    <Button
        android:id="@+id/order_book"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gridLayout"
        android:layout_marginTop="38dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:text="Order Book"
        android:textColor="#fff" />


    <Button
        android:id="@+id/quality"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/order_book"
        android:background="@drawable/button"
        android:elevation="0dp"
        android:gravity="center"
        android:text="Quality \u0026 Quantity"
        android:textColor="#fff"
        android:textSize="12sp" />="@+id/2" />
</RelativeLayout>