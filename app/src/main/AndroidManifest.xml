<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jarvis.concreteapp">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DashBoard"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Password_reset"
            android:label="Forgot Password"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUp"
            android:label="SignUp"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AboutConcrete"
            android:parentActivityName=".DashBoard"
            android:screenOrientation="portrait"
            android:label="About Concrete"/>
        <activity
            android:name=".Quality"
            android:parentActivityName=".DashBoard"
            android:screenOrientation="portrait"
            android:label="Quality and Quantity"/>
        <activity
            android:name=".OrderBook"
            android:parentActivityName=".DashBoard"
            android:screenOrientation="portrait"
            android:label="OrderBook"/>
        <activity
            android:name=".RequestQuote"
            android:label="Quote"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddSite"
            android:label="Add Site"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".POdetails"
            android:label="PO Information"
            android:screenOrientation="portrait"/>
        <activity android:name=".HistoryInfo"
            android:screenOrientation="portrait"/>
        <activity android:name=".Issues"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuoteInfo"
            android:screenOrientation="portrait"/>

    </application>

</manifest>